<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bow">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/bowhome"
            android:scaleType="fitStart"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/image"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bow_text"
            android:textSize="20dp"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:layout_below="@+id/text1"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/text2"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bodyweight Training"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:layout_below="@+id/text3"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Videos"
            android:textSize="30dp"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/text4"/>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text5"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imge1"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_below="@+id/trainer"
                android:layout_marginTop="10dp"
                android:src="@drawable/bow1"/>

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunge Elbow with Instep Rotation"

                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/text5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imge2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_below="@+id/trainer"
                android:layout_marginTop="10dp"
                android:src="@drawable/bow2"/>


            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kneeling Pelvic Tilt"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_below="@+id/text6"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>